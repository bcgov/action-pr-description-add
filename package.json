{
  "name": "action-pr-description-add",
  "version": "0.0.3",
  "private": true,
  "description": "TypeScript template action",
  "main": "src/main.ts",
  "scripts": {
    "all": "npm run build && npm run format && npm run lint && npm run package",
    "build": "tsc",
    "dist": "npm ci && npm run build && npm run package && git diff --ignore-space-at-eol dist/",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license LICENSE"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "pull request"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^2.0.0",
    "@actions/github": "^7.0.0",
    "braces": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vercel/ncc": "^0.38.0",
    "eslint": "^9.0.0",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.2",
    "typescript": "^5.4.5"
  },
  "overrides": {
    "@octokit/plugin-paginate-rest@<11.4.1": "11.4.1",
    "@octokit/request@<9.2.1": "9.2.1",
    "undici@<5.29.0": "5.29.0"
  }
}
